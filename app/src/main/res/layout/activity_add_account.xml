    <ImageView
        android:src="@mipmap/default_main"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/title_bar_center"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/account_edit_bg"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">
            <EditText
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入标签(标签不可重复, 必填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/account_edit_bg"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">
            <EditText
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入账号(必填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/account_edit_bg"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">
            <EditText
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入密码(必填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/account_edit_bg"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">
            <EditText
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="请输入备注(选填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
