<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.develop.ct7liang.accounts.activity.EditQueryPwActivity">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical">-->
        <!--<include layout="@layout/title_bar"/>-->
    <!--</LinearLayout>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_password"/>

    <!--android:background="@color/toumingColor"-->
    <com.andrognito.patternlockview.PatternLockView
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/pattern_lock_view"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:normalStateColor="@color/white"
        app:correctStateColor="@color/snackcolor"
        app:wrongStateColor="@color/pomegranate"/>

    <include layout="@layout/title_bar_center"/>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
